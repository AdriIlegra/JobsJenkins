{
    "builders": [
      {
        "type": "docker",
        "image": "golang:1.13",
        "commit": true,
        "changes": [
          "WORKDIR /calculator/",
          "EXPOSE 8080",
          "ENTRYPOINT go run ."
        ]
      }
    ],
    "provisioners": [
      {
        "type": "file",
        "source": "./app/",
        "destination": "/calculator/"
      },
      {
        "type": "shell",
        "inline": [
          "cd /calculator/",
          "go mod init calculator",
          "go get -d -v .",
          "go build"]
      }
    ],
    "post-processors": [
      {
        "type": "docker-tag",
        "repository": "adriananogueira/calculator",
        "tags": ["latest"]
      }
    ]
  }